<%= stylesheet_link_tag "signup", :media => "all" %>



<div class="signup">
  <div class="head-new">
    <h1>Chiller</h1>
  </div>
  
  <div class="signup-new">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>



      <div class="field">
        <%=f.label :ニックネーム , class:"label-new"%><br/>
        <%=f.text_field :name, autofocus: true , class:"form-new"%>
      </div>

      <div class="field">
        <%= f.label :Eメール , class:"label-new"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-new" %>
      </div>

      <div class="field">
        <%= f.label :パスワード , class:"label-new" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" , class:"form-new"%>
      </div>

      <div class="field">
        <%= f.label :パスワードの確認 , class:"label-new"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-new"%>
      </div>

      <div class="actions-new">
        <%= f.submit "新規登録" , class:"actions-log-btn"%>
      </div>
    <% end %>

        <%= render "users/shared/links" %>
      
  </div>
</div>

