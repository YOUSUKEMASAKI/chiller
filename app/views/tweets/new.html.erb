<%= stylesheet_link_tag "new", :media => "all" %>


<div class="profile">
    <div class="head row">
            <h1 class="head-edit-title">Chiller</h1>
    </div>
        <%=form_for @tweet do |f| %>
    <div class="new-body">
        <%=f.label :新規投稿 , class:"new-body-label"%>
        <%=f.text_field :body , :size => 500 , class:"new-body-body"%>
        <div class="new-body-img">
            <%=f.label :画像を投稿 , class: "new-body-img-label"%>
            <%=f.file_field :image%>
        </div>
        <%=f.submit "Tweet" , class:"new-body-tweet"%>
    </div>
        <%end%>

    <button type="button" class="btn  btn-primary btn-link-new-body">
    <%=link_to '投稿一覧へ' , tweets_path , class: "link-new-edit"%>
    </button>

</div>